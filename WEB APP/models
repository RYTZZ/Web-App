from flask_sqlalchemy import SQLAlchemy
from flask_login import UserMixin
from datetime import datetime
import secrets

db = SQLAlchemy()

class Student(UserMixin, db.Model):
    __tablename__ = 'students'
    id = db.Column(db.Integer, primary_key=True)
    student_id = db.Column(db.String(64), unique=True, nullable=False)  # used as username
    name = db.Column(db.String(120), nullable=False)
    # username field removed â€” student_id serves as username
    password_hash = db.Column(db.String(128), nullable=False)
    course = db.Column(db.String(64), nullable=True)
    block = db.Column(db.String(64), nullable=True)
    qr_token = db.Column(db.String(64), unique=True, nullable=False, default=lambda: secrets.token_urlsafe(24))
    must_change_password = db.Column(db.Boolean, default=True)  # force change on first login

    def get_id(self):
        return f"student-{self.id}"

class Admin(UserMixin, db.Model):
    __tablename__ = 'admins'
    id = db.Column(db.Integer, primary_key=True)
    username = db.Column(db.String(80), unique=True, nullable=False)  # admin unique username
    password_hash = db.Column(db.String(128), nullable=False)

    def get_id(self):
        return f"admin-{self.id}"

class Attendance(db.Model):
    __tablename__ = 'attendance'
    id = db.Column(db.Integer, primary_key=True)
    student_id = db.Column(db.Integer, db.ForeignKey('students.id'), nullable=False)
    timestamp = db.Column(db.DateTime, default=datetime.utcnow)
    mode = db.Column(db.String(20), default='scan')
    course = db.Column(db.String(64))
    block = db.Column(db.String(64))
